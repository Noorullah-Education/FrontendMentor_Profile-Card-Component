{
  "name": "frontendmentor_profile-card-component",
  "version": "1.0.0",
  "description": "![Design preview for the Profile card component coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noorullah-Education/FrontendMentor_Profile-Card-Component.git"
  },
  "keywords": [
    "html",
    "css",
    "sass"
  ],
  "author": "Noorullah Ahmadzai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Noorullah-Education/FrontendMentor_Profile-Card-Component/issues"
  },
  "homepage": "https://github.com/Noorullah-Education/FrontendMentor_Profile-Card-Component#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "concat": "^1.0.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  },
  "dependencies": {
    "postcss": "^8.2.4"
  }
}
